extends layout

block content
  h1= title
  form(method="POST" action="/transaction/create")
    .form-group
      label(for="date") Date
      input#date.form-control(type="date" name="date" required="required")
    .form-group
      label(for="description") Description
      input#description.form-control(type="text" name="description" required="required")
    .form-group
      label(for="amount") Amount
      input#amount.form-control(type="number" step="0.01" name="amount" required="required")
    .form-group
      label(for="type") Type
      select#type.form-control(name="transactionType")
        option(value="Income") Income
        option(value="Expense") Expense
    .form-group
      label Categories
      // All categories
      each category in categories
        .checkbox
          label
            input(type="checkbox" name="categoryIds" value=category._id)
            | #{category.name}
    button.btn.btn-primary(type="submit") Submit
