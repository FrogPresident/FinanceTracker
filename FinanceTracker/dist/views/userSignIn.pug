extends layoutLogin

block content
  h1= title
  form(method="POST" action="/api/sign-in")
    .form-group
      label(for="username") Username
      input#username.form-control(type="text" name="username" required="required")
    .form-group
      label(for="password") Password
      input#password.form-control(type="text" name="password" required="required")
    
    .submit-container
      button.btn.btn-primary(type="submit") Submit
      a(href='/sign-up') Sign Up

