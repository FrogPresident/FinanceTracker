extends layout

block content
  h1= title
  form(method="POST" action="/sign-up")
    .form-group
      label(for="username") Username
      input#username.form-control(type="text" name="username" required="required")
    .form-group
      label(for="password") Password
      input#password.form-control(type="text" name="password" required="required")
    .form-group
      label(for="email") Email
      input#email.form-control(type="text"  name="email" required="required")
    button.btn.btn-primary(type="submit") Submit
